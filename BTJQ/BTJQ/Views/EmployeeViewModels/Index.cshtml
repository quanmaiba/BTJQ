@model IEnumerable<BTJQ.Models.tblEmployee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="javascript:void(0);" onclick="employee.showModel()" class="btn btn-primary">Add Employee</a>
</p>
<table class="table table-striped table-hover" id="employeeView">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsExperience)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsExperience)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.EmployeeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal" id="addEditEmployee">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm Nhân Viên</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row form-group">
                    <div class="col-md-4">
                        <label class="control-label">ID Nhân Viên</label>
                    </div>
                    <div class="col-md-8 ">
                        <input type="text" disabled class="form-control" id="EmployeeID" name="EmployeeID" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label class="control-label">Tên nhân viên</label>
                    </div>
                    <div class="col-md-8 ">
                        <input type="text" required class="form-control" id="EmployeeName" name="EmployeeName" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label class="control-label">Số Điện Thoại</label>
                    </div>
                    <div class="col-md-8 ">
                        <input type="text" required class="form-control" id="PhoneNumber" name="PhoneNumber" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label class="control-label">Kỹ năng</label>
                    </div>
                    <div class="col-md-8 ">
                        <select class="form-control" id="Skill" name="SkillID"></select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label class="control-label">Kinh Nghiệm</label>
                    </div>
                    <div class="col-md-8 ">
                        <input type="text" required class="form-control" id="YearsExperience" name="YearsExperience" />
                    </div>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <a href="javascript:void(0);" onclick="employee.save()" class="btn btn-success">Save</a>
            </div>

        </div>
    </div>
</div>

@section css{
    <link href="~/lib/node_modules/datatables.net-dt/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/lib/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/node_modules/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/js/employee/employee.js"></script>
}

